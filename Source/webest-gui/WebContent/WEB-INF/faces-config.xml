<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xi="http://www.w3.org/2001/XInclude"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
 <converter>
  <description>Convert measuring units.</description>
  <converter-id>com.ibm.webest.gui.utils.UnitConverter</converter-id>
  <converter-class>com.ibm.webest.gui.utils.UnitConverter</converter-class>
  <property>
   <property-name>targetUnit</property-name>
   <property-class>String</property-class>
  </property>
  <property>
   <property-name>sourceUnitInstance</property-name>
   <property-class>com.ibm.webest.persistence.model.MeasuringUnit</property-class>
  </property>
  <property>
   <property-name>targetUnitInstance</property-name>
   <property-class>com.ibm.webest.persistence.model.MeasuringUnit</property-class>
  </property>
  <property>
   <property-name>sourceUnit</property-name>
   <property-class>String</property-class>
  </property>
  <property>
   <property-name>precision</property-name>
   <property-class>java.lang.Integer</property-class>
   <default-value>2</default-value>
  </property>
 </converter>
 <managed-bean>
  <managed-bean-name>estimateAction</managed-bean-name>
  <managed-bean-class>com.ibm.webest.gui.action.EstimateAction</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>authAction</managed-bean-name>
  <managed-bean-class>com.ibm.webest.gui.action.AuthenticationAction</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>projectDescriptionAction</managed-bean-name>
  <managed-bean-class>com.ibm.webest.gui.action.ProjectDescriptionAction</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>solutionAction</managed-bean-name>
  <managed-bean-class>com.ibm.webest.gui.action.SolutionAction</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>pnrCurveModel</managed-bean-name>
  <managed-bean-class>com.ibm.webest.gui.model.PnrCurveModel</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>granularityAction</managed-bean-name>
  <managed-bean-class>com.ibm.webest.gui.action.GranularityAction</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>sizingAction</managed-bean-name>
  <managed-bean-class>com.ibm.webest.gui.action.SizingAction</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>reportAction</managed-bean-name>
  <managed-bean-class>com.ibm.webest.gui.action.ReportAction</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>piHistoryAction</managed-bean-name>
  <managed-bean-class>com.ibm.webest.gui.action.PiHistoryAction</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>homeAction</managed-bean-name>
  <managed-bean-class>com.ibm.webest.gui.action.HomeAction</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
 </managed-bean>
 <navigation-rule>
  <display-name>global</display-name>
  <from-view-id>*</from-view-id>
  <navigation-case>
   <from-action>#{authAction.logout}</from-action>
   <to-view-id>/home.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>goToEstimate</from-outcome>
   <to-view-id>/estimate.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>goToHome</from-outcome>
   <to-view-id>/home.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>goToSolution</from-outcome>
   <to-view-id>/solution.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>showReport</from-outcome>
   <to-view-id>/report.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <application>
  <default-render-kit-id>org.apache.myfaces.trinidad.core</default-render-kit-id>
  <!-- 
  <view-handler>org.apache.myfaces.trinidadinternal.facelets.TrinidadFaceletViewHandler</view-handler>
  -->
  <locale-config>
   <default-locale>en</default-locale>
   <supported-locale>en</supported-locale>
  </locale-config>
 </application>
 <lifecycle>
  <phase-listener>com.ibm.webest.gui.utils.MyFacesStartupListener</phase-listener>
 </lifecycle>
</faces-config>
